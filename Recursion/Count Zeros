
int countZeros(int n)
{
    if(n <=9)
    {
        if(n == 0) return 1;
        else
        {
            return 0;
        }
    }
    int count = 0;
    if(n % 10 == 0)
    {
        count = 1;
    }
    
    int smallOutput = countZeros(n/10);
        return smallOutput + count;
        

}


