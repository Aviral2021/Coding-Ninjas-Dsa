int index(int input[], int size, int x, int i)
{
    if(size == 0) return -1;
    if(input[0] == x) return i;
    
    int smallOutput = index(input+1,size-1,x,i+1);
    return smallOutput; 
}



int firstIndex(int input[], int size, int x)
{
    int i =  0;
 
    int finalAns = index(input,size,x,i);
        return finalAns;

}
